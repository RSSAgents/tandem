{
  "name": "final-project",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "prepare": "husky",
    "dev": "npm run dev -w frontend",
    "build": "npm run build -w frontend",
    "lint": "npm run lint -w frontend",
    "lint:fix": "npm run lint:fix -w frontend",
    "typecheck": "npm run typecheck -w frontend",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.8.1"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx}": [
      "eslint --config frontend/eslint.config.js --fix",
      "prettier --write"
    ],
    "backend/**/*.ts": [
      "eslint --config backend/eslint.config.js --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
